@page "/admin/exam-notifications"
@attribute [Authorize(Policy = PolicyConstant.SuperAdminPolicy)]
@using Learning.Web.Components.Layouts
@layout AdminLayout

<MudGrid Justify="Justify.SpaceAround">
    <MudItem xs="12" md="8">
        <ListExamNotificationsComponent @ref=_listExamNotificationsComponentRef />
    </MudItem>
    <MudItem xs="12" md="4">
        <AddExamNotificationComponent OnExamNotificationCreated="( x => _listExamNotificationsComponentRef!.RefreshList())" />
    </MudItem>
</MudGrid>
@code {
    ListExamNotificationsComponent? _listExamNotificationsComponentRef;
}
