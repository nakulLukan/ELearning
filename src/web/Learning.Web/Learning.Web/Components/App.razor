<script>
    window.Blazor.addEventListener("enhancedload", () => {
        const appPageElement = document.getElementById('appPage');
        if (appPageElement != null) {
            appPageElement.scrollTo({ top: 0, left: 0, behavior: 'smooth' });
        }
    });
</script>
@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    public IComponentRenderMode? PageRenderMode => GetPageRenderMode();
    private IComponentRenderMode? GetPageRenderMode()
    {
        var path = HttpContext.Request.Path;
        if (path.StartsWithSegments("/admin"))
        {
            return InteractiveServer;
        }
        else
        {
            return null;
        }
    }
}