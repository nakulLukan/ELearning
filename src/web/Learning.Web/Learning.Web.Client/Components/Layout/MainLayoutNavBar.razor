@rendermode InteractiveAuto
<div>
    <MudAppBar WrapContent Gutters="false" Class="mr-2">
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudButton Href="/" Class="no-link h-100 pa-0 pr-4 ">
                <img src="assets/images/bts_icon.svg" alt="Logo" class="logo" /> <MudText Color="Color.Inherit" Class="app-nav-banner-text"><b>@UIConstant.AppName</b></MudText>
            </MudButton>

            <MudSpacer />
            <div class="d-flex h-100 gap">
                <MudButton Class="no-link app-nav-item" Href="/exam-notifications">Exam Notifications</MudButton>
                <MudButton Class="no-link app-nav-item" Href="/quiz">Quiz</MudButton>
                <MudButton Class="no-link app-nav-item" Href="/contacts-us">Contact Us</MudButton>
                <MudButton Class="no-link app-nav-item" Href="/about-us">About Us</MudButton>
                <MudButton Class="no-link app-nav-item ml-4 mr-2" Href="/login">Login</MudButton>
            </div>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <div class="d-flex flex-no-wrap justify-space-between w-100">
                <MudButton Href="/" Class="no-link">
                    <img src="assets/images/bts_icon.svg" alt="Logo" class="logo" /> <MudText Typo="Typo.subtitle1" Color="Color.Inherit"><b>@UIConstant.AppName</b></MudText>
                </MudButton>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="(()=> _openDrawer = !_openDrawer)"></MudIconButton>
            </div>
        </MudHidden>
    </MudAppBar>

    <MudDrawer Class="fixed"
               Fixed
               Variant="DrawerVariant.Temporary"
               @bind-Open=_openDrawer>
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">@UIConstant.AppName</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/exam-notifications">Exam Notifications</MudNavLink>
            <MudNavLink Href="/quiz">Quiz</MudNavLink>
            <MudNavLink Href="/contact-us">Contact Us</MudNavLink>
            <MudNavLink Href="/about-us">About Us</MudNavLink>
        </MudNavMenu>
        <MudNavLink Href="/about-us">Login</MudNavLink>
    </MudDrawer>
</div>
@code {
    private bool _openDrawer = false;
}