@rendermode InteractiveAuto
<MudAppBar WrapContent Gutters="false" Class="mr-2">
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
        <MudButton Href="/" Class="no-link">
            <img src="assets/images/bts_icon.ico" alt="Logo" class="logo" /> <MudText Typo="Typo.subtitle1" Color="Color.Dark"><b>@UIConstant.AppName</b></MudText>
        </MudButton>

        <MudSpacer />
        <MudButton Href="/exam-notifications" >Exam Notifications</MudButton>
        <MudButton Href="/quiz" >Quiz</MudButton>
        <MudButton Href="/contacts-us">Contact Us</MudButton>
        <MudButton Href="/about-us">About Us</MudButton>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Class="fixed" OnClick="(()=> _openDrawer = !_openDrawer)"></MudIconButton>
        <MudSpacer></MudSpacer>
        <MudButton Href="/" Class="align-self-center no-link">
            <img src="assets/images/bts_icon.ico" alt="Logo" class="logo" /> <MudText Typo="Typo.subtitle1" Color="Color.Dark"><b>@UIConstant.AppName</b></MudText>
        </MudButton>
        <MudSpacer></MudSpacer>
    </MudHidden>
</MudAppBar>

<MudDrawer Class="fixed"
           Fixed
           Variant="DrawerVariant.Temporary"
           @bind-Open=_openDrawer>
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">@UIConstant.AppName</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/exam-notifications">Exam Notifications</MudNavLink>
        <MudNavLink Href="/quiz">Quiz</MudNavLink>
        <MudNavLink Href="/contact-us" >Contact Us</MudNavLink>
        <MudNavLink Href="/about-us" >About Us</MudNavLink>
    </MudNavMenu>
</MudDrawer>
@code {
    private bool _openDrawer = false;
}