@using Learning.Web.Client.Contracts.Interop
@using Learning.Web.Client.Impl.Interop
@inject NavigationManager Navigation
@inject IAppJSInterop AppJSInterop
<div class="@Class" style="background-color: @BackgroundColor; min-height:100%; padding: inherit; padding-bottom:10px; overflow-y:auto" id="appPage">
    @ChildContent
</div>
@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string BackgroundColor { get; set; } = "#F4F4F4";

    [Parameter]
    public string? Class { get; set; }
}
