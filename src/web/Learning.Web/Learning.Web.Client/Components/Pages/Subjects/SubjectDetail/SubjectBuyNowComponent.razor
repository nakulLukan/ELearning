@inject NavigationManager NavigationManager
@if (ShowBuy)
{
    <MudButton Class="@Class" Style="@Style"
               StartIcon="@Icons.Material.TwoTone.ShoppingCart" Color="Color.Success"
               Variant="Variant.Filled" Size="Size.Large" Disabled=Disabled OnClick="OnBuyNowClicked">Buy Course</MudButton>
}
@code {
    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter] [EditorRequired]
    public string SubjectCode { get; set; }

    [Parameter] [EditorRequired]
    public bool ShowBuy { get; set; }

    private void OnBuyNowClicked()
    {
        NavigationManager.NavigateTo($"course/{SubjectCode}/buy");
    }
}
