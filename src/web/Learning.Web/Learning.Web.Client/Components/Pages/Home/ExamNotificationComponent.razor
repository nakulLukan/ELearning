@using Learning.Web.Client.Models.Home
@rendermode InteractiveAuto
<MudCarousel Class="mud-width-full" TData="ExamNotificationDto" Style="height:300px">

    @foreach (var notification in _examNotifications)
    {
        <MudCarouselItem Transition="Transition.Slide" >
            <MudGrid Style="height: 100%; background-color: orangered" Class="align-center">
                <MudItem xs="2"></MudItem>
                <MudItem md="3">
                    <MudImage Src="@notification.ImagePath"></MudImage>
                </MudItem>
                <MudItem md="3">
                    <MudStack>
                        <MudText Typo="Typo.h6">
                            @notification.Title
                        </MudText>
                        <MudText>
                            @notification.Description
                        </MudText>
                    </MudStack>
                </MudItem>
                <MudItem md="2">
                    <MudButton Href="@("/exam-notification/" + @notification.ExamNotificationId)" Class="">APPLY NOW</MudButton>
                </MudItem>
                <MudItem xs="2"></MudItem>
            </MudGrid>
        </MudCarouselItem>
    }
</MudCarousel>

